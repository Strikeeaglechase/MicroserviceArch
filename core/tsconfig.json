{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES6",
		"moduleResolution": "node",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"baseUrl": "./src",
		"lib": ["ES2019"],
		"plugins": [
			{ "transform": "./transformers/serviceTransformer.ts", "isEsm": true }
		]
	},
	"include": ["src/"],
	"exclude": ["src/serviceDefs/"]
}